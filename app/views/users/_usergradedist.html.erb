<div id="user_grades">
<script type="text/javascript" charset="utf-8">
  $(function() {
    var perShapeGradient = {
            x1: 1,
            y1: 1,
            x2: 1,
            y2: 0
        };
    new Highcharts.Chart({
      exporting: {
          sourceWidth: 800,
          sourceHeight: 400,

          // scale: 2 (default),
          enabled: false,

          buttons: {
                contextButton: {
                    symbolStroke: '#d5d5d5',
                    menuItems: [{
                        text: 'Export to PNG',
                        onclick: function () {
                            this.exportChart({
                                width: 3200
                            });
                        }
                    },{
                        text: 'Export to PDF',
                        onclick: function () {
                            this.exportChart({
                              type: 'application/pdf'
                            });
                        },
                        separator: false
                    },
                  ]
                }
            },
            chartOptions: {
                title: {
                    style: {
                        color: 'black',
                        fontWeight: 'bold',
                        fontFamily: "'Helvetica', sans-serif"
                    }
                },
                subtitle: {
                },
            }

      },
      navigation: {
          buttonOptions: {
              align: 'right',
              verticalAlign: 'bottom',
              y: 32,
              theme: {
                r: '0',
                  states: {
                      hover: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      },
                      select: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      }
                  }
              }
          }
      },
      chart: {
        renderTo: "usergradedist-1<%= @user.id %>",
        backgroundColor:'transparent',
        spacingBottom: 35,
        type: "column",
        style: {
          fontFamily: 'Poppins',
        }
      },
      title: {
        text: ""
      },
      xAxis: {
        type: 'category',
        labels: {
          enabled: true,
          rotation: 0,
          style: {
            color: '#888'
          }
        },
        tickLength: 0,
        minorGridLineWidth: 0,
        minorTickLength: 0,
        lineColor: '#888',
      },
      yAxis: {
        title: {
          text: ""
        },
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent',
        allowDecimals: false
      },
      credits: {
        enabled: false,
        style: {
          fontSize: "12px",
        },
        href: false,
        position: {
          align: "right",
          verticalAlign: "bottom",
          x: -40,
          y: -8,
        }
      },
      legend: {
        enabled: true,
        layout: 'horizontal',
        align: 'center',
        verticalAlign: 'bottom',
        y: 30,
        floating: true,
        itemStyle: {
           color: 'white',
         },
      },
      tooltip: {
          borderWidth: 0,
          backgroundColor: '#222',
          shadow: false,
          style: {
              fontSize: '8px',
              color: '#fff'
          },
          pointFormat: '{series.name}<br><span style="font-size:2.9em; color: #fff; font-weight: 700;">{point.y}</span>',

         formatter: function() {
             var s = [];

             $.each(this.points, function(i, point) {
                 s.push(point.series.name + '<br>' + '<span style="font-size:2.9em; color: #fff; font-weight: 700;">' +
                     point.y +'<span>');
             });

             return s.join('<br>');
         },
         shared: true

      },
      plotOptions: {
        column: {
          borderColor: 'transparent',
          grouping: false,
          cursor: 'pointer',
                point: {
                    events: {
                        click: function () {
                            location.href = this.series.options.data[this.category][2] ;
                        }
                    }
                },
          dataLabels: {
            enabled: false,
            style: {
              textOutline: false,
              color: '#888',
              fontSize: "12px",
              fontFamily: 'Poppins',
              fontWeight: '400'
            },
            formatter: function() {
                if (this.y != 0) {
                  return this.y;
                } else {
                  return null;
                }
            }
          }
        }
      },
      colors: [{
            linearGradient: perShapeGradient,
            stops: [
                [0, '#d7348c'],
                [1, '#e32666']
                ]
            }, {
            linearGradient: perShapeGradient,
            stops: [
              [0, 'rgba(215, 52, 140, 0.3)'],
              [1, 'rgba(227, 38, 102, 0.3)']
              ]
            }, {
            linearGradient: perShapeGradient,
            stops: [
              [0, 'rgb(0, 177, 255)'],
              [1, 'rgb(0, 177, 255)']
              ]},
        ],

      series: [{
          type: 'column',
          name: 'Sends',
          data: <%= raw ticks.joins(:grade).order('grades.id ASC').pluck('grades.grade').uniq.map {|fs| [Grade.where(grade: fs).first.grade, ticks.joins(:grade).where("grades.grade = ? AND ticks.user_id = ?", fs, @user.id).count, "https://www.climbconnect.com/users/#{@user.id}/ticks"] } %>,
          pointPlacement: 0
      },{
          type: 'column',
          name: 'Attempts',
          data: <%= raw attempts.joins(:grade).order('grades.id ASC').pluck('grades.grade').uniq.map {|fs| [Grade.where(grade: fs).first.grade, attempts.joins(:grade).where("grades.grade = ? AND ticks.user_id = ?", fs, @user.id).count, "https://www.climbconnect.com/users/#{@user.id}/ticks"] } %>,
          pointPlacement: 0
      }]
    });
  });
</script>
<div id="usergradedist-1<%= @user.id %>" style="width:100%; height: 150px;"></div>
</div>
