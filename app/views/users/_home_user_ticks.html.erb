<div id="home_user_ticks1">
<script type="text/javascript" charset="utf-8">
  $(function() {
    var perShapeGradient = {
            x1: 1,
            y1: 1,
            x2: 1,
            y2: 0
        };
    new Highcharts.Chart({
      exporting: {
          sourceWidth: 800,
          sourceHeight: 400,

          // scale: 2 (default),
          enabled: false,
          filename: "new_routes",

          buttons: {
                contextButton: {
                    symbolStroke: '#d5d5d5',
                    menuItems: [{
                        text: 'Export to PNG',
                        onclick: function () {
                            this.exportChart({
                                width: 3200
                            });
                        }
                    },{
                        text: 'Export to PDF',
                        onclick: function () {
                            this.exportChart({
                              type: 'application/pdf'
                            });
                        },
                        separator: false
                    },
                  ]
                }
            },
            chartOptions: {
                title: {
                    style: {
                        color: 'black',
                        fontWeight: 'bold',
                        fontFamily: "'Helvetica', sans-serif"
                    }
                },
                subtitle: {
                    text:  "New Routes"
                },
            }

      },
      navigation: {
          buttonOptions: {
              align: 'right',
              verticalAlign: 'bottom',
              y: 32,
              theme: {
                r: '0',
                  states: {
                      hover: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      },
                      select: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      }
                  }
              }
          }
      },
      chart: {
        backgroundColor:'transparent',
        renderTo: "home_user_ticks",
        spacingBottom: 35,
        type: "column",
        style: {
          fontFamily: 'Montserrat',
        }
      },
      title: {
        text: ""
      },
      xAxis: {
        type: "datetime",
        minTickInterval: 24 * 3600 * 1000 * 7,
        labels: {
          format: '{value: %b %d }',
          style: {
            color: '#444'
          },
          step: 1,
        },
        tickLength: 0,
        minorTickLength: 0,
      },
      yAxis: [{  // Primary yAxis
        title: {
          text: "Weekly"
        },
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent',
        allowDecimals: false
      },{ // Secondary yAxis
        title: {
          text: "",
        },
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent',
        allowDecimals: false,
        opposite: true,
      }],
      credits: {
        enabled: false,
        style: {
          fontSize: "12px",
        },
        href: false,
        position: {
          align: "right",
          verticalAlign: "bottom",
          x: -40,
          y: -8,
        }
      },
      tooltip: {
        enabled: true,
      },
      legend: {
        enabled: true,
        layout: 'horizontal',
        align: 'center',

        verticalAlign: 'bottom',
        y: 30,
        floating: true,
        color: "#ffffff",
      },
      setOptions: {
        global : {
            useUTC : false
        }
      },
      plotOptions: {
        areaspline: {
          marker: {
              enabled: false
          }
        },
        column: {
          borderColor: 'transparent',
          grouping: true,
          dataLabels: {
            enabled: true,
            style: {
              textShadow: '0 0 0 black',
              color: '#444',
              fontFamily: 'Source Sans Pro',
              fontWeight: 'normal'
            },
            formatter: function() {
                if (this.y != 0) {
                  return this.y;
                } else {
                  return null;
                }
            }
          }
        }
      },
      colors: [{
            linearGradient: perShapeGradient,
            stops: [
                [0, 'rgba(0, 177, 255, 0.2)'],
                [1, 'rgba(0, 177, 255, 0.5)']
                ]
            }, {
            linearGradient: perShapeGradient,
            stops: [
                [0, '#57d79a'],
                [1, '#5ccb6c']
                ]
            }, {
            linearGradient: perShapeGradient,
            stops: [
                [0, 'rgb(136, 219, 5)'],
                [1, 'rgb(112, 180, 5)']
                ]},
        ],

      series: [
        {
          name: "Try Hard",
          type: "areaspline",
          pointInterval: 24 * 3600 * 1000 * 7,
          pointStart: <%= (26.weeks.ago.beginning_of_week.to_i * 1000) %>,
          data: <% if @annualticks.present? %>

          <%= [user_ticks_value_chart_series( @annualticks, 26.weeks.ago ), user_projects_value_chart_series( @annualticks, 26.weeks.ago )].transpose.map {|x| x.sum} %>

           <% end %>
        },
        {
          name: "Ticks",
          yAxis: 1,
          pointInterval: 24 * 3600 * 1000 * 7,
          pointStart: <%= (26.weeks.ago.beginning_of_week.to_i * 1000) %>,
          data: <% if @annualticks.present? %><%= user_ticks_chart_series( @annualticks, 26.weeks.ago ) %> <% end %>
        },

        ]
    });
  });
</script>
<div id="home_user_ticks" style="width:100%; height: 150px;"></div>

</div>
