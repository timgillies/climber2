<% provide(:title, @user.name) %>

<div class="container-fluid">
  <div class="profile">
    <div class="col-sm-12">
      <div class="row">
        <h1>
        <% if @user.image? %>
          <%= image_tag @user.image + "?type=large", class: "img-profile" %>
        <% end %>
          <%= @user.name %>
        </h1>
        <%= link_to "edit", edit_user_path(@user) %>
      </div>
      <br/>
    </div>
    <div class="col-sm-12">
      <div class="row">
        <p><strong> Account Type:</strong>
          <% if @user.role? %>
            <%= @user.role.humanize if @user.role %>
          <% else %>
            Climber (Basic)
          <% end %>
        </p>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="row">
        <%= render 'users/roles', object: @user %>
      </div>
    </div>
  </div>
</div>
