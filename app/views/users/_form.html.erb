<br/>
<div class="col-sm-12 gray-labels bg-routeform">
  <%= form_for @user do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <% if @user.image? %>
    <div class="row">
      <div class="col-sm-12">
        <%= image_tag @user.image + "?type=large", class: "img-profile" %>
      </div>
      <br/>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <%= f.label "Upload image" %>
        <%= f.file_field :avatar, class: 'btn-expire btn-lg' %>
      </div>
    </div>
        <% else %>
    <div class="row">
      <div class="col-sm-12">
        <%= image_tag @user.avatar.url(:thumb), class: "img-profile" %>
      </div>
    </div>
    <br/>
    <div class="row">
      <div class="col-sm-12">
        <%= f.label "Upload image" %>
        <%= f.file_field :avatar, class: 'btn-expire btn-lg' %>
      </div>
    </div>
        <% end %>
    <br/>

    <div class="row">
      <div class="col-sm-12">
      <p><strong> Account Type:</strong>
        <% if @user.role? %>
          <%= @user.role.humanize if @user.role %>
        <% else %>
          Climber (Basic)
        <% end %>
      </p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label "Gender (optional)" %>
    <%= f.select( :gender, @genders , {include_blank: "Select gender..."}, {class: 'form-control'}) %>

    <%= f.label :zip, "Zip code" %>
    <%= f.text_field :zip, class: 'form-control' %>
    <br>

    <%= f.submit "Save", class: "btn btn-save btn-lg" %>
  <% end %>
</div>
