
<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      exporting: {
          sourceWidth: 800,
          sourceHeight: 400,

          // scale: 2 (default),
          enabled: true,
          filename: "<%= fs.name %>",

          buttons: {
                contextButton: {
                    menuItems: [{
                        text: 'Export to PNG',
                        onclick: function () {
                            this.exportChart({
                                width: 3200
                            });
                        }
                    },{
                        text: 'Export to PDF',
                        onclick: function () {
                            this.exportChart({
                              type: 'application/pdf'
                            });
                        },
                        separator: false
                    },
                  ]
                }
            },
            chartOptions: {
                title: {
                    text: "<%= @facility.name + " " + @facility.location %>",
                    style: {
                        color: 'black',
                        fontWeight: 'bold',
                        fontFamily: "'Helvetica', sans-serif"
                    }
                },
                subtitle: {
                    text: "<%= fs.name + " - " + Date.current.strftime("%b %d, %Y") %>"
                },
                credits: {
                  enabled: true,
                  text: 'www.climbconnect.com',
                  href: 'https://www.climbconnect.com',
                  position: {
                    align: "right",
                    verticalAlign: "bottom",
                    x: -20,
                    y: -4,
                  }
                },

            }

      },
      navigation: {
          buttonOptions: {
              align: 'left',
              verticalAlign: 'top',
              y: -10,
              theme: {
                r: '0',
                  states: {
                      hover: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      },
                      select: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      }
                  }
              }
          }
      },

      chart: {

        renderTo: "gradedist_boulder-<%= fs.id %>",
        type: "column",
        style: {
          fontFamily: 'Helvetica',
        }

      },
      title: {
        text: ""
      },
      xAxis: {
        type: 'category',
        labels: {
          enabled: true
        },
        tickLength: 0,
        minorTickLength: 0,
      },
      yAxis: {
        title: {
          text: ""
        },
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent',
        allowDecimals: false
      },
      credits: {
        enabled: false,
      },
      legend: {
        enabled: false
      },
      plotOptions: {
        spline: {
          marker: {
              enabled: false
          }
        },
        column: {
          cursor: 'pointer',
                point: {
                    events: {
                        click: function () {
                            location.href = this.series.options.data[this.category][2] ;
                        }
                    }
                },
          dataLabels: {
            enabled: true,
            style: {
              textShadow: '0 0 0 black',
              color: '#333',
              fontFamily: 'Helvetica',
              fontWeight: 'normal'
            },
            formatter: function() {
                if (this.y != 0) {
                  return this.y;
                } else {
                  return null;
                }
            }
          }
        }
      },
      colors: (["#6bda8f", "#5499C7", "#da8f6b", "#da6bb6"]),

      series: [{
          type: 'column',
          name: 'Routes',
          data: <%= raw facility_grades.where('grade_systems.id = ?', fs ).order('grade_systems.discipline ASC', 'grades.rank ASC').map {|f| [ f.grade, Route.current.where("grade_id = ? AND facility_id = ?", f, @facility.id ).count, "https://www.climbconnect.com/admin/facilities/#{@facility.id}/routes?utf8=%E2%9C%93&filterrific%5Bsearch_query%5D=&filterrific%5Bwith_grade_id%5D=#{ f.id }&filterrific%5Bwith_zone_id%5D=&filterrific%5Bwith_wall_id%5D=&filterrific%5Bwith_setter_id%5D=&filterrific%5Bwith_status_id%5D=#{Date.current}&filterrific%5Bsorted_by%5D=created_at_desc&_=" ] } %>,
          url: 'test'
      },{
          type: 'spline',
          name: 'Target',
          data: <%= raw facility_grades.where('grade_systems.id = ?', fs ).order('grade_systems.discipline ASC', 'grades.rank ASC').map {|f| [f.grade, FacilityTarget.where("grade_id = ? AND facility_id = ?", f, @facility.id).sum(:value) ] } %>
      }
    ]
    });
  });
</script>
<div id="gradedist_boulder-<%= fs.id %>" style="width:100%; height:200px;"></div>
