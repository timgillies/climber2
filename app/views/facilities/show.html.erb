<% provide(:title, @facility.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @facility.name %>
      </h1>

      <h2>
        <%= @facility.location %>
        <%= @facility.addressline1 %>
        <%= @facility.city %>, <%= @facility.state %>
        <%= @facility.zipcode %>
      </h2>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @facility.routes.any? %>
      <h3>routes (<%= @facility.routes.count %>)</h3>
      <ol class="routes">
        <%= render @routes %>
      </ol>
      <%= will_paginate @routes %>
    <% end %>
  </div>
</div>
