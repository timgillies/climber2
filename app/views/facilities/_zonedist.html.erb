<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "zone_dist",
        type: "bar",
        style: {
          fontFamily: 'Helvetica',
        }
      },
      title: {
        text: ""
      },
      xAxis: {
        type: 'category',
        labels: {
          enabled: true
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        minorTickLength: 0,
        lineColor: 'transparent'
      },
      yAxis: {
        title: {
          text: ""
        },
        labels: {
          enabled: false,
          align: 'left',
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent',
        allowDecimals: false
      },
      credits: {
        enabled: false
      },
      legend: {
        enabled: false
      },
      plotOptions: {
        bar: {
          dataLabels: {
            enabled: true,
            style: {
              textShadow: '0 0 0 black',
              color: '#333',
              fontFamily: 'Helvetica',
              fontWeight: 'normal'
            },
            formatter: function() {
                if (this.y != 0) {
                  return this.y;
                } else {
                  return null;
                }
            }
          }
        }
      },
      colors: (["#b6da6b", "#da8f6b", "#da6bb6"]),

      series: [{
          type: 'bar',
          name: 'Routes',
          data: <%= raw @facility.zones.all.order('name ASC').map {|f| [f.name, Route.current.where("zone_id = ?", f).count ] } %>
      }]
    });
  });
</script>
<div id="zone_dist" style="width:100%; height:200px;"></div>
