<h1><small> Active Routes </small></h1>
<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "grade_dist",
        type: "column"
      },
      title: {
        text: ""
      },
      xAxis: {
        type: 'category',
        categories: <%= raw @facility.grades.all.order('discipline ASC', 'rank ASC').map {|f| [f.grade] } %>,
        labels: {
          enabled: true
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        minorTickLength: 0,
        lineColor: 'transparent'
      },
      yAxis: {
        title: {
          text: ""
        },
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent',
        allowDecimals: false
      },
      credits: {
        enabled: false
      },
      legend: {
        enabled: false
      },
      plotOptions: {
        column: {
          dataLabels: {
            enabled: true,
            style: {
              textShadow: '0 0 0 black'
            }
          }
        }
      },
      colors: (["#6bda8f", "#b6da6b", "#da8f6b", "#da6bb6"]),

      series: [{
          type: 'column',
          name: 'Routes',
          data: <%= @facility.grades.all.map {|f| [ @activeroutes.where("grade_id = ?", f).count] } %>
      }]
    });
  });
</script>
<div id="grade_dist" style="width:100%; height:200px;"></div>
