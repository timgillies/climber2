<h1><small> New Routes </small></h1>
<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "newroutes",
        type: "column"
      },
      title: {
        text: ""
      },
      xAxis: {
        type: "datetime",
        labels: {
          format: '{value: %a, %m/%d}'
        },
      },
      yAxis: {
        title: {
          text: ""
        },
        allowDecimals: false
      },
      credits: {
        enabled: false
      },
      tooltip: {
        formatter: function() {
          return Highcharts.dateFormat("%B %e, %Y", this.x) + ': ' +
           + Highcharts.numberFormat(this.y, 0);
        }
      },
      plotOptions: {
        column: {
          grouping: true,
          dataLabels: {
            enabled: false,
            style: {
              textShadow: '0 0 0 black'
            }
          }
        }
      },
      colors: (["#6bda8f", "#b6da6b", "#da8f6b", "#da6bb6"]),

      series: [
        <% { "Bouldering" => @facility.routes.boulder, "Sport Climbing" => @facility.routes.sport }.each do |type, routes| %>
        {
          name: "<%= type %>",
          pointInterval: <%= 1.day * 1000 %>,
          pointStart: <%= 3.weeks.ago.to_i * 1000 %>,
          data: <%= (3.weeks.ago.to_date..Date.today).map { |date| routes.set_on(date).to_f }.inspect %>
        },
        <% end %>
        ]
    });
  });
</script>
<div id="newroutes" style="width:100%; height:200px;"></div>
