<div class="top-10 home-stats row">
  <div class="header bg-top-10">
    <h1>Stats</h1>
  </div>


  <div class="circle-wrapper">
    <div class="large-circle responsive"><%= @facility.routes.current.count %><span class="text"><%= "total" %></span></div>
  </div>
  <div class="circle-wrapper">
    <div class="large-circle responsive"><%= @facility.routes.current.climb_type("boulder").count %><span class="text"><%= "boulder".pluralize(@facility.routes.current.count) %></span></div>
  </div>
  <div class="circle-wrapper">
    <div class="large-circle responsive"><%= @facility.routes.current.climb_type("sport").count %><span class="text"><%= "route".pluralize(@facility.routes.current.count) %></span></div>
  </div>
  <div class="circle-wrapper">
    <div class="large-circle responsive"><%= (total_age(@facility.routes) / @facility.routes.current.count) if @facility.routes.current.count > 0  %><span class="text"><%= "avg. age" %></span></div>
  </div>

  <div class="header bg-top-10">
    <h1>Zones</h1>
  </div>
    <ul>
      <% @facility.zones.each do |zone| %>
        <%= link_to facility_zone_path(zone.facility_id, zone) do %>
          <li>
            <%= zone.name %>
          </li>
        <% end %>
      <% end %>
    <ul>
</div>
