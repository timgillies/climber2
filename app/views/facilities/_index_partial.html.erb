<div class="container-fluid">
  <div class="row">
    <div class="routelist-header bg-blue-gradient">
      <h1><strong>ALL</strong>Facilities</h1>
    </div>
    <br>
    <%= form_for_filterrific @filterrific do |f| %>
    <div>
      <div class="">
            <div class="top-10 home-stats left-margin facility-list row">

            <div class="header bg-top-10">
              <h1>search</h1>
            </div>

              <div class="row">
                <div class="col-xs-12 col-sm-8">
                  <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
                  <div class="form-group user-search-box">
                    <%= f.text_field(
                      :facility_search_query,
                      placeholder: '  Search by Name',
                      class: 'filterrific-periodically-observed form-control'
                    ) %>
                  </div>
                </div>

                <div class="col-xs-6 col-sm-4">
                  <div class="form-group user-search-box">
                    <%= f.select(
                      :with_state,
                      @filterrific.select_options[:with_state],
                      { include_blank: 'State' },
                      {class: "form-control"}
                    ) %>
                  </div>
                </div>
              </div>
            </div>
            <%= render 'facilities/facility_list', object: @facilities %>
          </div>
          <%= paginate @facilities %>
        </div>
    <% end %>
  </div>
</div>
