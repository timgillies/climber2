<script type="text/javascript" charset="utf-8">
  $(function() {
    var perShapeGradient = {
            x1: 1,
            y1: 1,
            x2: 1,
            y2: 0
        };
    new Highcharts.Chart({
      exporting: {
          sourceWidth: 800,
          sourceHeight: 400,

          // scale: 2 (default),
          enabled: false,
          filename: "facility_zones",

          buttons: {
                contextButton: {
                    symbolStroke: '#d5d5d5',
                    menuItems: [{
                        text: 'Export to PNG',
                        onclick: function () {
                            this.exportChart({
                                width: 3200
                            });
                        }
                    }, ,{
                        text: 'Export to PDF',
                        onclick: function () {
                            this.exportChart({
                              type: 'application/pdf'
                            });
                        },
                        separator: false
                    },{
                        text: 'Share on facebook (coming soon!)',
                        onclick: function() {
                            window.open('http://www.facebook.com/share.php?u=http://export.highcharts.com','_blank');
                        }
                    },
                  ]
                }
            },
            chartOptions: {
                title: {
                    style: {
                        color: 'black',
                        fontWeight: 'bold',
                        fontFamily: "'Montserrat', sans-serif"
                    }
                },
                subtitle: {
                    text: "Facility Zones - <%= Date.current.strftime("%b %d, %Y") %>"
                },
            }

      },
      navigation: {
          buttonOptions: {
              align: 'right',
              verticalAlign: 'bottom',
              y: 32,
              theme: {
                r: '0',
                  states: {
                      hover: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      },
                      select: {
                          fill: '#a9a9a9',
                          stroke: '#a9a9a9',
                      }
                  }
              }
          }
      },
      chart: {
        renderTo: "stats_zone_dist",
        backgroundColor:'transparent',
        spacingBottom: 10,
        type: "bar",
        style: {
          fontFamily: 'Montserrat',
        }
      },
      title: {
        text: ""
      },
      xAxis: {
        type: 'category',
        labels: {
          enabled: true,
          style: {
            color: '#fff',
          }
        },
        tickLength: 0,

        minorTickLength: 0,

      },
      yAxis: {
        title: {
          text: ""
        },
        labels: {
          enabled: false,
          align: 'left',
        },
        tickLength: 0,

        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,

        allowDecimals: false
      },
      credits: {
        enabled: false,
        text: '<%= @facility.name.gsub(/[^0-9a-z ]/i, '')%>  |  climbconnect.com',
        style: {
          fontSize: "12px",
        },
        href: 'https://www.climbconnect.com',
        position: {
          align: "right",
          verticalAlign: "bottom",
          x: -40,
          y: -8,
        }
      },
      legend: {
        enabled: false
      },
      plotOptions: {
        spline: {
          marker: {
              enabled: false
          }
        },
        bar: {
          borderColor: 'transparent',
          cursor: 'pointer',
                point: {
                    events: {
                        click: function () {
                            location.href = this.series.options.data[this.category][2] ;
                        }
                    }
                },
          dataLabels: {
            enabled: true,
            style: {
              textShadow: '0 0 0 black',
              color: '#fff',
              fontFamily: 'Montserrat',
              fontWeight: 'thin'
            },
            formatter: function() {
                if (this.y != 0) {
                  return this.y;
                } else {
                  return null;
                }
            }
          }
        }
      },
      colors: [{
            linearGradient: perShapeGradient,
            stops: [
                [0, '#2bb573'],
                [1, '#8cc53f']
                ]
            }, {
            linearGradient: perShapeGradient,
            stops: [
                [0, '#00b1ff'],
                [1, '#00b1ff']
                ]
            }, {
            linearGradient: perShapeGradient,
            stops: [
                [0, 'rgb(136, 219, 5)'],
                [1, 'rgb(112, 180, 5)']
                ]},
        ],

      series: [{
          type: 'bar',
          name: 'Routes',
          data: <%= raw @facility.zones.all.map {|f| [f.name, Route.current.where("zone_id = ?", f).count, "/facilities/#{@facility.id}/zones/#{ f.id }" ] } %>
      },{
          type: 'spline',
          name: 'Target',
          data: <%= raw raw @facility.zones.all.map {|f| [f.name, FacilityTarget.where("zone_id = ? AND sub_child_zone_id IS NULL", f).sum(:value) ] } %>
      }
    ]
    });
  });
</script>
<div id="stats_zone_dist" style="width:100%; height:100%;"></div>
