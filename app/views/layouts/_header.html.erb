<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="col-sm-12">
      <div class="row">
        <%= link_to "climb | connect", root_path, id: "logo" %>
        <nav>
        <ul class="nav navbar-nav navbar-left">
          <li><%= link_to "Indoor", href="#" %></li>
          <li><%= link_to "Outdoor", href="#" %></li>
          <li><%= link_to "Find a Partner", users_path %></li>
        </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if current_user.present? && (current_user.role == "facility_admin" || current_user.role == "admin") %>
            <li><%= link_to "Route Management", admin_facilities_path %></li>
            <% end %>
              <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Profile", user_path(current_user) %></li>
                  <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% else %>
            <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
