<!-- Left nav -->
<div class="container">
  <div class="routes">
    <div class="row">
      <div class="col-sm-12">
        <p class="navbar-btn">
          <% if @facility.demo? %>
            <span class="badge badge-demo pull-right">DEMO</span>
          <% end %>
        </p><h1><%= @facility.name %><small> <%= @facility.location %></small></h1>
      </div>
    </div>
  </div>


  <div class="container">
    <div id="admin-header">
      <nav class="navbar navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-ex1-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <span class="hidden-md hidden-lg hidden-sm hidden-xl">
              <ul>
              <li class="pull-right"><%= link_to "New Route", "#newRouteModal", data: { toggle: "modal"}, class: "btn btn-nav btn-md" %> <%= link_to  "View Routes", admin_facility_routes_path(@facility), class: "btn btn-nav btn-md" %></li>
              </ul>
            </span>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-ex1-collapse">
          <ul class="nav navbar-nav navbar-left">
            <li class="<%= 'active' if current_page?(admin_facility_path(@facility)) %>"><%= link_to "HOME", admin_facility_path(@facility) %></li>
            <li class="<%= 'active' if current_page?(admin_facility_routes_path(@facility)) %> hidden-xs"><%= link_to "ROUTES", admin_facility_routes_path(@facility) %></li>
            <li class="<%= 'active' if current_page?(new_admin_facility_route_path(@facility)) %> hidden-xs"><%= link_to "ADD ROUTES", "#newRouteModal", data: { toggle: "modal"} %></li>
            <li class="<%= 'active' if current_page?(admin_facility_tasks_path(@facility)) %>"><%= link_to "TASK LIST", admin_facility_tasks_path(@facility) %></li>
            <li class="<%= 'active' if current_page?(admin_facility_zones_path(@facility)) %>"><%= link_to "ZONES", admin_facility_zones_path(@facility) %></li>
            <li class="<%= 'active' if current_page?(admin_facility_facility_roles_path(@facility)) %>"><%= link_to "TEAM", admin_facility_facility_roles_path(@facility) %></li>
            <li class="<%= 'active' if current_page?(admin_facility_grades_path(@facility)) %>"><%= link_to "GRADING", admin_facility_grades_path(@facility) %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">

                FACILITY <b class="caret"></b>
              </a>
              <ul class="dropdown dropdown-menu white">
                <li><%= link_to "Facility Info", edit_admin_facility_path(@facility) %></li>
                <li><%= link_to "Targets", admin_facility_facility_targets_path(@facility) %></li>
                <li><%= link_to "Subscriptions", admin_facility_subscriptions_path(@facility) %></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </nav>
    </div>
  </div>
</div>


<!-- Modal -->

  <div class="modal fade" id="newRouteModal" tabindex="-1" role="dialog" aria-labelledby="newRouteModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <span class="modal-title" id="newRouteModal"><h4><strong>CLIMB | CONNECT </strong><small><%= @facility.name %> <%= @facility.location if @facility.location %></small></h4></span>
        </div>
        <div class="modal-body row">
          <%= form_for [:admin, @facility, @route], :html => {:class => "form-label"} do |f| %>
          <% if(params[:name]) %>
          <%= render 'admin/routes/prepopulated_form', :f => f %>
          <% else %>
          <%= render 'admin/routes/form', :f => f %>
          <% end %>
        </div>
        <div class="modal-footer">
          <%= f.button :submit, class: "btn btn-save" %>
          <button type="button" class="btn btn-close" data-dismiss="modal">cancel</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
