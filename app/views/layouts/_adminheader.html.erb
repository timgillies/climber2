<!-- Navbar static top -->
<div class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "climb | connect", root_path, id: "logo" %>
    </div>
    <div class="navbar-collapse collapse">

      <!-- Left nav -->
      <ul class="nav navbar-nav navbar navbar-left">
        <li><%= link_to @facility.name, admin_facility_path(@facility) %></li>
        <li><%= link_to "Route Database", admin_facility_routes_path(@facility) %></li>
        <li><%= link_to "Add Routes", new_admin_facility_route_path(@facility) %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Setup <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Zones", new_admin_facility_zone_path(@facility) %></li>
            <li><%= link_to "Walls", new_admin_facility_wall_path(@facility) %></li>
            <li><%= link_to "Routesetters", new_admin_facility_setter_path(@facility) %></li>
            <li><%= link_to "Grades", new_admin_facility_grade_path(@facility) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to "Change Facility", admin_facilities_path %>
            </li>
          </ul>
        </li>
      </ul>

      <!-- Right nav -->
      <ul class="nav navbar-nav navbar-right">

          <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
        <li><%= link_to "Signup", signup_path %></li>
        <li><%= link_to "Login", login_path %></li>
        <% end %>
      </ul>

    </div><!--/.nav-collapse -->
  </div><!--/.container -->
</div>
