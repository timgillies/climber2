<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "total_ticks",
        type: "column",
        backgroundColor:'transparent'
      },
      title: {
        text: ""
      },
      xAxis: {
        type: "datetime",
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        minorTickLength: 0,
        lineColor: 'transparent'
      },
      yAxis: {
        title: {
          text: ""
        },
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent'
      },
      credits: {
        enabled: false
      },
      tooltip: {
        enabled: false,
        formatter: function() {
          return Highcharts.dateFormat("%B %e, %Y", this.x) + ': ' +
           + Highcharts.numberFormat(this.y, 0);
        }
      },
      legend: {
        enabled: false
      },
      plotOptions: {
        column: {
          borderWidth: 0,
          stacking: 'normal',
          dataLabels: {
            enabled: false,
            style: {
              textShadow: '0 0 0 black'
            }
          }
        }
      },
      colors: (["#6bda8f", "#b6da6b", "#da8f6b", "#da6bb6"]),

      series: [
      <% { "Onsight" => Tick.onsight, "Flash" => Tick.flash,
          "Redpoint" => Tick.redpoint, "Project" => Tick.project }.each do |name, ticks| %>
        {
        name: "<%= name %>",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 30.days.ago.to_i * 1000 %>,
        data: <%= (30.days.ago.to_date..Date.today).map { |date| ticks.total_on(date).to_f}.inspect %>
      },
      <% end %>
      ]
    });
  });
</script>
<div id="total_ticks" style="width:100%; height:100px;"></div>
