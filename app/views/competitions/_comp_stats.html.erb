<div class="row">
<% unless CompRelationship.find_by(user_id: current_user.id, role_name: 'admin') %>
<%= render 'competitions/join_button' %>
<% end %>

<div class='col-sm-3 col-xs-6 comp-stats-center'>
  <span class="comp-stat-icon"><i class="fa fa-list" aria-hidden="true"></i></span>
  <%= link_to route_list_facility_competition_path(@facility, object) do %>
    <div class="comp-circle-wrapper">
      <div class="comp-large-circle responsive"><%= object.routes.count %><span class="text">Routes</span></div>
    </div>
  <% end %>
</div>



<div class='col-sm-3 col-xs-6 comp-stats-center'>
  <span class="comp-stat-icon"><i class="fa fa-bolt" aria-hidden="true"></i></span>
  <%= link_to results_facility_competition_path(@facility, object) do %>
    <div class="comp-circle-wrapper">
      <div class="comp-large-circle responsive"><i class="fa fa-bolt" aria-hidden="true"></i><span class="text">Results</span></div>
    </div>
  <% end %>
</div>

<%= render 'competitions/participant_count', object: @competition %>


<% if @competition.users_as_participants.where(user_id: current_user, role_name: 'admin').count > 0 %>

<div class='col-sm-3 col-xs-6 comp-stats-center'>
  <span class="comp-stat-icon"><i class="fa fa-plus" aria-hidden="true"></i></span>
  <%= link_to routes_facility_competition_path(@facility, object) do %>
    <div class="comp-circle-wrapper">
      <div class="comp-large-circle responsive"><i class="fa fa-plus" aria-hidden="true"></i><span class="text">Add Routes</span></div>
    </div>
  <% end %>
</div>

<% else %>

<div class='col-sm-3 col-xs-6 comp-stats-center'>
  <span class="comp-stat-icon"><i class="fa fa-plus" aria-hidden="true"></i></span>
  <%= link_to invite_facility_competition_path(@facility, object) do %>
    <div class="comp-circle-wrapper">
      <div class="comp-large-circle responsive"><i class="fa fa-plus" aria-hidden="true"></i><span class="text">Invite Friends</span></div>
    </div>
  <% end %>
</div>

<% end %>
</div>
