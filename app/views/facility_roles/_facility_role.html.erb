<br>
<%= div_for(@facility_roles) do |f| %>
<ol class="routelist">
  <li style="border: none;">
    <div class="col-sm-12">
      <div class="container-fluid">
        <div class="row">
          <br/>
          <% if f.confirmed? %>
          <div class="col-xs-11 col-sm-11">
            <div class="row">
            <h3>
              <%= f.facility.name %>
            </h3>
            </div>
            <div class="row">
              <p><%= f.name.humanize if f.name %></p>
            </div>
          </div>
          <% else %>
          <div class="col-xs-11 col-sm-11">
            <div class="row">
              <h3>
                <%= f.email if f.email%>
              </h3>
            </div>
            <div class="row">
              <p><%= f.name.humanize if f.name %></p>
            </div>
          </div>
          <% end %>


          <div class="col-xs-1 col-sm-1 col-md-1 no-print">
            <h3><%= link_to user_facility_role_path(@user, f), data: {:confirm => 'Are you sure? This cannot be undone.'},
                        :method => :delete do %>
                        <i class="glyphicon glyphicon-trash"></i>
                        <%end %>
            </h3>
          </div>
        </div>
      </div>
    </div>
  </li>
</ol>
<% end %>
