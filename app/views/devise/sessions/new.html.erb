<div class="background-gradient">
  <div class="container-fluid">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 signup-form">

      <%= image_tag 'https://s3-us-west-2.amazonaws.com/climbconnect-assets/logos/social-media/cc_logo_large.png', class: "devise-logo" %>
      <div class="divider-line"></div>

      <br/>
      <%= render 'static_pages/login_buttons' %>
      <br/>
      <div class="divider-line"></div>
      <p>Or sign in with your email address</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-save btn-lg" %>
          </div>
        <% end %>
        <br/>

       <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
