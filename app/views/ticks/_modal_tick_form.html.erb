<div class="container-fluid">

<br>

  <div class="row">
    <div class="col-sm-12">

    <%= render 'shared/error_messages', object: route.object %>




      <%= route.hidden_field :user_id, :value => current_user.id %>
      <div class="gray-labels">
        <div>
          <div class="row">
            <div class="col-xs-12">
              <p><%= route.label :tick_type, "Ascent Detail", class: "sr-only" %></p>
              <div class="route-form">
                <div id="donate">
                  <% tick_types.each do |fs| %>
                    <label class="green"><%= route.radio_button :tick_type, fs[1], params[:tick_type] == fs[1] ? { checked: true } : {checked: route.object.tick_type.eql?(fs[1]) } %>
                      <span><%= fs[0] %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12">
              <p><%= route.label :lead, "Climb Type", class: "sr-only" %></p>
              <div class="route-form">
                <div id="donate">
                  <% rope_tick_types.each do |fs| %>
                    <label class="blue"><%= route.radio_button :lead, fs[1], params[:lead] == fs[1] ? { checked: true } : {checked: route.object.lead.eql?(fs[1]) } %>
                      <span><%= fs[0] %></span>
                    </label>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-xs-12">
              <%= route.label :description, "Description", class:"sr-only" %>
              <%= route.text_area :description, class: 'form-control', placeholder: "Comments", rows: "2" %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <%= route.label :date, "Date*" %>
              <% if params[:action] == "edit" %>
                <%= route.date_field :date, class: 'form-control' %>
              <% else %>
                <%= route.date_field :date, :value => Date.current , class: 'form-control' %>
              <% end %>

            </div>
          </div>
          <br>

          <br>
        </div>
      </div>
    </div>
  </div>
</div>
