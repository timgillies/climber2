
<%= form_for [current_user, @facility, @route, @tick] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

<%= f.collection_radio_buttons(
  :tick_type, Ticktype.all , :id, :name, item_wrapper_class: 'inline',
    collection_wrapper_class: 'routes'
    ) do |b|
      b.label { b.radio_button + b.text }
    end %>

  <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d'), class: 'form-control' %>
  <%= f.text_field :description, class: 'form-control', placeholder: "Notes..."%>

  <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>
