<h1><small> My Ticks </small></h1>
<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "user_ticks",
        type: "column"
      },
      title: {
        text: ""
      },
      xAxis: {
        type: "datetime"
      },
      yAxis: {
        title: {
          text: ""
        },
        allowDecimals: false,
      },
      credits: {
        enabled: false
      },
      tooltip: {
        formatter: function() {
          return Highcharts.dateFormat("%B %e, %Y", this.x) + ': ' +
           + Highcharts.numberFormat(this.y, 0);
        }
      },
      plotOptions: {
        column: {
          stacking: 'normal',
          dataLabels: {
            enabled: false,
            style: {
              textShadow: '0 0 0 black'
            }
          }
        }
      },
      colors: (["#6bda8f", "#b6da6b", "#da8f6b", "#da6bb6"]),

      series: [
      <% { "Onsight" => @userticks.onsight, "Flash" => @userticks.flash,
          "Redpoint" => @userticks.redpoint, "Project" => @userticks.project }.each do |name, ticks| %>
        {
        name: "<%= name %>",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 30.days.ago.to_i * 1000 %>,
        data: <%= (30.days.ago.to_date..Date.today).map { |date| ticks.total_on(date).to_f}.inspect %>
      },
      <% end %>
      ]
    });
  });
</script>
<div id="user_ticks" style="width:100%; height:200px;"></div>
