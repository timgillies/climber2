<h1><small>Route Ticks</small></h1>
<script type="text/javascript" charset="utf-8">
  $(function() {
    new Highcharts.Chart({
      chart: {
        renderTo: "orders_chart",
        type: "column"
      },
      title: {
        text: ""
      },
      xAxis: {
        type: "datetime",
        labels: {
          enabled: true,
          format: '{value: %m/%d}'
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        minorTickLength: 0,
        lineColor: 'transparent'
      },
      yAxis: {
        title: {
          text: ""
        },
        labels: {
          enabled: false
        },
        tickLength: 0,
        lineWidth: 0,
        minorGridLineWidth: 0,
        gridLineColor: 'transparent',
        minorTickLength: 0,
        lineColor: 'transparent',
        allowDecimals: false
      },
      credits: {
        enabled: false
      },
      legend: {
        enabled: false
      },
      tooltip: {
        formatter: function() {
          return Highcharts.dateFormat("%B %e, %Y", this.x) + ': ' +
           + Highcharts.numberFormat(this.y, 0);
        }
      },
      plotOptions: {
        column: {
          stacking: 'normal',
          dataLabels: {
            enabled: false,
            style: {
              textShadow: '0 0 0 black'
            }
          }
        }
      },
      colors: (["#6bda8f", "#b6da6b", "#da8f6b", "#da6bb6"]),

      series: [
      <% { "Onsight" => @totalticks.all, "Flash" => @totalticks.flash,
          "Redpoint" => @totalticks.redpoint, "Project" => @totalticks.project }.each do |name, ticks| %>
        {
        name: "<%= name %>",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 30.days.ago.to_i * 1000 %>,
        data: <%= (30.days.ago.to_date..Date.today).map { |date| ticks.total_on(date).to_f}.inspect %>
      },
      <% end %>
      ]
    });
  });
</script>
<div id="orders_chart" style="width:100%; height:200px;"></div>
