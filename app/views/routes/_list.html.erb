<div id="filterrific_results">
  <div class="row">
    <div class="col-xs-12">
      <div class="routelist">
      <h2><%= page_entries_info @routes  %>
      <% if filter_results_count > 0 %>
        (<%= filter_results_count.to_s + ' filter'.pluralize(filter_results_count) + ' applied' %>)
      <% end %>
      </h2>
      <span class="pull-right">
        <%= link_to(
          'Reset filters',
          reset_filterrific_url
        ) %>
      </span>
    </div>
    </div>

  </div>
  <%= div_for(@routes) do |f| %>
  <ol class="routelist">

      <% if f.color_hex? %>
      <li style="border-left: 15px solid <%= f.color_hex %>">
      <% elsif f.color? %>
        <% if ["light", "dark", "neon", "hot"].include?(f.color.split(/\W+/).first.downcase.to_s) %>
          <li class="<%= f.color.split(/\W+/).second.downcase.to_s %>">
          <% else %>
          <li class="<%= f.color.split(/\W+/).first.downcase.to_s %>">
          <% end %>
      <% else %>
      <li>
      <% end %>

      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-10 col-sm-8 col-md-6 col-lg-7 col-xl-7">
            <h3>
              <% if f.color? %>
                <%= link_to f.grade.grade + " "+ f.color.upcase , user_facility_route_path(@user, f.facility, f) if f.grade %>
              <% elsif (color_name(f.color_hex,f.facility)).nil? %>
                <%= link_to f.grade.grade , user_facility_route_path(@user, f.facility, f) if f.grade %>
              <% else %>
                <%= link_to f.grade.grade + " "+ color_name(f.color_hex,f.facility)[0].upcase , user_facility_route_path(@user, f.facility, f) if f.grade %>
              <% end %>
            </h3>
            <h2> <%= f.name %></h2>
          </div>



          <div class="hidden-xs hidden-sm no-print">
            <div class="col-md-2">
              <% if f.active? %>
                <%= button_to "add project",  "#", class: 'btn btn-expire btn-xs', method: :expire, remote: true %>
              <% else %>
                <%= button_to "remove project",  "#", class: 'btn btn-expired btn-xs', method: :expire, remote: true %>
              <% end %>
            </div>

            <div class="col-md-2 no-print">
              <%= button_to "quick tick",  "#", class: 'btn btn-expire btn-xs', method: :create_task, remote: false %>
            </div>

            <div class="col-md-2 no-print">
              <%= link_to "add ascent",  user_facility_route_path(current_user, f.facility, f), class: 'btn btn-expire btn-xs', remote: false %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
              <div class="tab"><p><strong><%= f.facility.name if f.facility %></strong><%= f.facility.location if f.facility.location %></p></div>
          </div>
          <div class="col-sm-12">
              <div class="tab"><strong><% unless params[:controller] == "admin/tasks" %>Route ID: <% else %>Task ID: <% end %></strong><%= f.id %></div>

          </div>

          <div class="col-sm-12">
              <div class="tab"><strong>Location: </strong><%= f.zone.name if f.zone %> > <%= f.wall.name if f.wall %> > <%= f.sub_child_zone.name if f.sub_child_zone %></div>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="tab"><strong>

              <% if params[:controller] == "admin/tasks" %>

               Assigned to:

               <% else %>

               Set by:

               <% end %>

             </strong><%= f.user.name if f.user %></div>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="tab text-right">


              <% unless params[:controller] == 'admin/tasks' %>
                <% if (days_ago(f) == "today") %>
                  <span>set <%= days_ago(f) %></span>
                <% else %>
                  set <%= days_ago(f) %> ago
                <% end %>
              <% else %>
                <% if f.setdate? %>
                due on <%= f.setdate.strftime("%b %d, %Y") %>
                <% end %>
              <% end %>


              <% if f.user %>
                <% if f.user.image? %>
                  <%= image_tag f.user.image ,:class=> "img-setter-icon" %>
                <% elsif f.user.avatar_file_name? %>
                  <%= image_tag f.user.avatar.url(:thumb), class: "img-setter-icon" %>
                <% end %>
              <% end %>



            </div>
          </div>
        </div>

        <div class="row">

          <div class="hidden-md hidden-lg hidden-xl no-print">
            <br/>
            <div class="col-xs-6 col-sm-6">
              <% if f.active? %>
                <%= button_to "add project",  "#", class: 'btn btn-expire btn-xs', method: :expire, remote: true %>
              <% else %>
                <%= button_to "remove project",  "#", class: 'btn btn-expired btn-xs', method: :expire, remote: true %>
              <% end %>
            </div>

            <div class="col-xs-6 col-sm-6 no-print">
              <%= link_to "add ascent",  user_facility_route_path(current_user, f.facility, f), class: 'btn btn-expire btn-xs', remote: false %>
            </div>
          </div>
        </div>
      </div>
    </li>
  </ol>
  <% end %>

  <%= paginate @routes %>
</div>
