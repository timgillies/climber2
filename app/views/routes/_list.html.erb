<div id="filterrific_results">
  <div class="row">
    <div class="col-sm-10">
      <%= page_entries_info @routes  %>
    </div>
    <div class="col-sm-2">
      <%= link_to(
        'Reset filters',
        reset_filterrific_url
      ) %>
    </div>
  </div>

  <br />

  <%= div_for(@routes) do |f| %>
  <ol class="routelist">
    <li>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-9">
            <h3><%= link_to f.grade.grade , facility_route_path(@facility, f) %>
              <small> <%= link_to f.color.capitalize, facility_route_path(@facility, f) %><b> <%= link_to f.name , facility_route_path(@facility, f) %></b></small>
            </h3>
          </div>


        </div>
        <div class="row">
          <div class="col-sm-2">
            <span class="timestamp">
              <h4><small>Route ID: <%= f.id %></small></h4>
            </span>
          </div>

          <div class="col-sm-3">
              <h4><small><%= f.zone.name if f.zone %> / <%= f.wall.name if f.wall %></small></h4>
          </div>
          <div class="col-sm-2">
            <h4><small><%= f.setter.nick_name if f.setter%></small></h4>
          </div>
          <div class="col-sm-2">
            <h4><small>set <%= time_ago_in_words(f.created_at) %> ago</small></h4>
          </div>



        </div>
      </div>
    </li>
  </ol>
  <% end %>

  <%= paginate @routes %>
</div>
