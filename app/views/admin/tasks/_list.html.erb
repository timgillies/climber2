<div id="filterrific_results_task_admin">
  <div class="row">
    <div class="col-xs-8">
      <%= page_entries_info @tasks  %>
    </div>
    <div class="col-xs-4">
      <span class="pull-right">
        <%= link_to(
          'Reset filters',
          reset_filterrific_url
        ) %>
      </span>
    </div>
  </div>

  <br />

  <%= div_for(@tasks) do |f| %>
  <ol class="routelist">
    <div class="divider-line"></div>


      <% if f.color? %>
        <% if ["light", "dark", "neon", "hot"].include?(f.color.split(/\W+/).first.downcase.to_s) %>
          <li class="<%= f.color.split(/\W+/).second.downcase.to_s %>">

          <% else %>

          <li class="<%= f.color.split(/\W+/).first.downcase.to_s %>">

          <% end %>
      <% else %>
        <li>
      <% end %>

      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-10 col-sm-10 col-md-7 col-lg-7 col-xl-7">

            <% unless f.grade_id? %>
            <h3>
              <% unless f.task_type == "route_task" %>
                <span class="glyphicon glyphicon-wrench"></span>
              <% end %>
              <%= link_to f.task_description.upcase , admin_facility_task_path(@facility, f) if f.task_description %>
            </h3>

            <% else %>

            <h3>
              <% unless f.task_type == "route_task" %>
                <span class="glyphicon glyphicon-wrench"></span>

              <% end %>

              <%= link_to f.grade.grade + " "+ f.color.upcase , admin_facility_task_path(@facility, f) if f.grade %>
            </h3>

            <% end %>

            <h2> <%= f.name %></h2>
          </div>


          <div class="hidden-xs hidden-sm no-print">
            <div class="col-md-2">
              <% if f.task_type == 'route_task'  && f.active? %>
                <%= button_to activate_route_admin_facility_task_path(@facility, f), class: 'btn btn-activate btn-xs', method: :activate_route, remote: false do %>
                      create route <i class="glyphicon glyphicon-share-alt"></i>
                      <%end %>
              <% end %>
            </div>

            <div class="col-md-2 no-print">
              <% if f.active? %>
              <%= button_to "mark as done",  complete_task_admin_facility_task_path(@facility, f), class: 'btn btn-activate btn-xs', method: :complete_task, remote: true %>
              <% end %>
            </div>
          </div>
          <div class="col-xs-2 col-sm-1 no-print">
              <h3><%= link_to edit_admin_facility_task_path(@facility, f ) do %>
                <i class="glyphicon glyphicon-cog pull-right"></i>
              <%end %>
            </h3>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
              <div class="tab"><strong><% unless params[:controller] == "admin/tasks" %>Route ID: <% else %>Task ID: <% end %></strong><%= f.task_number %></div>

          </div>
          <div class="col-sm-12">
              <div class="tab"><strong>Location: </strong><%= f.zone.name if f.zone %> > <%= f.wall.name if f.wall %> > <%= f.sub_child_zone.name if f.sub_child_zone %></div>
          </div>
          <div class="col-xs-4 col-sm-6 col-md-6">
            <div class="tab"><strong>

              <% if params[:controller] == "admin/tasks" %>

              <% if f.assignee_id? %><span class="hidden-xs"> Assigned to:</span><% end %>

               <% else %>

               Set by:

               <% end %>

             </strong><%= f.assignee.name if f.assignee_id %></div>
          </div>
          <div class="col-xs-8 col-sm-6 col-md-6">
            <div class="tab text-right">


              <% unless params[:controller] == 'admin/tasks' %>
                <% if (days_ago(f) == "today") %>
                  <span class="badge badge-today">set <%= days_ago(f) %></span>
                <% else %>
                  set <%= days_ago(f) %> ago
                <% end %>
              <% else %>
              <% if f.completed_at? %>
                <span class="glyphicon glyphicon-ok glyphicon-green"></span> Completed on <%= f.completed_at.strftime("%b %d, %Y") %>
              <% else %>
                <% if f.setdate? %>
                due on <%= f.setdate.strftime("%b %d, %Y") %>
                <% end %>
              <% end %>
              <% end %>


              <% if f.assignee %>
                <% if f.assignee.image? %>
                  <%= image_tag f.assignee.image ,:class=> "img-setter-icon" %>
                <% elsif f.assignee.avatar_file_name? %>
                  <%= image_tag f.assignee.avatar.url(:thumb), class: "img-setter-icon" %>
                <% end %>
              <% end %>



            </div>
          </div>
        </div>

        <% if f.task_description? %>
        <div class="row">
          <div class="col-sm-12">
            <span class="tab"><i><%= f.task_description %></i></span>
          </div>
        </div>
        <% end %>
        <div class="row">

          <div class="hidden-md hidden-lg hidden-xl no-print">
            <br/>
            <div class="col-xs-6 col-sm-6">
              <% if f.task_type == 'route_task'  && f.active? %>
                <%= button_to activate_route_admin_facility_task_path(@facility, f), class: 'btn btn-activate btn-xs', method: :activate_route, remote: false do %>
                      move to routes <i class="glyphicon glyphicon-share-alt"></i>
                      <%end %>
              <% end %>
            </div>

            <div class="col-xs-6 col-sm-6 no-print">
              <% if f.active? %>
              <%= button_to "mark as done",  complete_task_admin_facility_task_path(@facility, f), class: 'btn btn-activate btn-xs', method: :complete_task, remote: true %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </li>
  </ol>
  <% end %>

  <%= paginate @tasks %>
</div>
