<div id="add_route_button_<%= route.id %>">
<% unless CompRoute.find_by(route_id: route.id, competition_id: @competition.id) %>




<%= link_to admin_facility_competition_route_add_route_path(@facility, @competition, route), method: :post, remote: true, data: { disable_with:
  "
    <div class='comp-add'><i class='fa fa-refresh fa-spin' aria-hidden='true'></i>
  " } do %>

  <div class="comp-add"><i class="fa fa-plus" aria-hidden="true"></i><span class="text"><%= "add" %></span></div>


<% end %>


<% else %>

<% if CompRoute.find_by(route_id: route.id, competition_id: @competition.id) %>

  <%= link_to admin_facility_competition_route_remove_route_path(@facility, @competition, route), method: :post, remote: true, data: { disable_with:
    "
      <div class='comp-add'><i class='fa fa-refresh fa-spin' aria-hidden='true'></i></div>
    " } do %>



    <div class="comp-add green-check"><i class="fa fa-check" aria-hidden="true"></i><span class="text"><%= "added" %></span></div>


  <% end %>
<% end %>

<% end %>
</div>
