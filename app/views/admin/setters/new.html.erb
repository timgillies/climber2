<% provide(:title, 'Add routesetters') %>

<div class="container">
  <div class="filter-body">
    <h1>Route Setters</h1>
  </div>
  <br/>
    <div class="row">
      <div class="col-sm-6">
        <%= form_for [:admin, @facility, @setter] do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.text_field :first_name, class: 'form-control', placeholder: "First name" %>

          <%= f.text_field :last_name, class: 'form-control', placeholder: "Last name" %>

          <%= f.text_field :nick_name, class: 'form-control', placeholder: "Display name" %>

          <%= f.submit "Add", class: "btn btn-primary" %>

        <% end %>
    </div>
    <div class="col-sm-6">
      <%= render 'admin/setters/setter', object: @setters %>
    </div>
</div>
