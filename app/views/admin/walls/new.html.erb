<% provide(:title, 'Walls') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="routes">
        <h1><small>Add new wall</small></h1>
      </div>
      <%= form_for [:admin, @facility, @wall], :html => {:class => "form-label"}, remote: false do |f| %>
      <%= render 'admin/walls/form', object: @walls, f: f %>
      <div class="col-sm-3 col-md-3 col-lg-3">
        <label class="hidden-xl">&nbsp;</label>
        <%= f.submit "Save", class: "btn btn-submit" %>
      </div>
    </div>
    <% end %>
    </div>
  </div>
