
<br/>
<%= form_for [:admin, @facility, @custom_color], :html => {:class => "form-label"} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

<div class="row">
  <div class="col-xs-2">
  <%= f.text_field :color_hex, class: 'form-control', as: :minicolors, id: "color-picker" %>
  </div>

  <div class="col-xs-10 col-sm-7">
  <%= f.text_field :color_name, class: 'form-control', placeholder: "Color Name" %>
  </div>

  <div class="col-sm-3 col-md-3 col-lg-3">
  <%= f.label "Submit", class: 'sr-only' %>
  <%= f.submit "Add Color", class: "btn btn-submit" %>
  </div>
</div>
<br>
<% end %>
