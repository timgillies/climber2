

<%= form_for [:admin, @facility], :html => {:class => "form-label"} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= f.label :name, "Company name*", class: "form-label" %>
      <%= f.text_field :name, placeholder: "ex. Moe's Tavern", class: 'form-control' %>

      <%= f.label :location, "Location name"%>
      <%= f.text_field :location, placeholder: "ex. South Location", class: 'form-control' %>

      <%= f.label :addressline1, "Address*" %>
      <%= f.text_field :addressline1, class: 'form-control' %>

      <%= f.label :addressline2, "Address continued" %>
      <%= f.text_field :addressline2, class: 'form-control' %>
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4">
      <%= f.label :city, "City*" %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>


    <div class="col-sm-4 col-md-4 col-lg-">
    <%= f.label :state, "State*" %>
    <%= f.select(:state, options_for_select(us_states, selected: f.object.state ), { include_blank: 'Select state' }, { class: 'form-control' }) %>
    </div>

    <div class="col-sm-4 col-md-4 col-lg-4">
      <%= f.label :zipcode, "Zip code*" %>
      <%= f.text_field :zipcode, class: 'form-control' %>
    </div>

    <div class="form-gray">
      <h1>Customize</h1>
    </div>
    <br/>
    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= f.label :days_from_start_date, "Default number of days routes will expire in.  Leave blank to require manual expiration of routes" %>
      <%= f.text_field :days_from_start_date, placeholder: "ex. 30", class: 'form-control' %>
    </div>

      <br/>
    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= f.submit "Save", class: "btn btn-save" %>
    </div>

<% end %>
