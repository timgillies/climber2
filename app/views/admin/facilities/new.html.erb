<% provide(:title, 'Register a climbing facility') %>


<div class="container">
    <h1>Climbing Facility Registration</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for([:admin,@facility]) do |f| %>
          <%= render 'shared/error_messages', object: @facility %>

          <%= f.label :name, "Facility name" %>
          <%= f.text_field :name, class: 'form-control' %>

          <%= f.label :location, "Location (optional)"%>
          <%= f.text_field :location, class: 'form-control' %>

          <%= f.label :addressline1, "Address" %>
          <%= f.text_field :addressline1, class: 'form-control' %>

          <%= f.label :addressline2, "Address (line 2)" %>
          <%= f.text_field :addressline2, class: 'form-control' %>

          <%= f.label :city %>
          <%= f.text_field :city, class: 'form-control' %>

          <%= f.label :state %>
          <%= f.select :state, options_for_select(us_states), include_blank: true, class: 'form-control' %>

          <%= f.label :zipcode, "Zip code" %>
          <%= f.text_field :zipcode, class: 'form-control' %>

          <%= f.submit "Register", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
</div>
