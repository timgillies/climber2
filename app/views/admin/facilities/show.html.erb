<% provide(:title, @facility.name) %>

<div class="row">
  <div class="col-md-4">
    <% if @facility.routes.any? %>
      <h3>routes (<%= @facility.routes.count %>)</h3>
      <ol class="routes">
        <%= render @routes %>
      </ol>
      <%= will_paginate @routes %>
    <% end %>
  </div>
</div>
