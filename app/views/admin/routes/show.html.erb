<% provide(:title, @route.name) %>


<div class="col-sm-6"
  <div class="container-fluid">
    <div class="routes">
      <h1><%= @route.grade.grade %><small> <%= @route.name %></small></h1>
      <div class="row">
        <div class="col-sm-2">
            <p>Color:</p>
        </div>
        <div class="col-sm-3">
            <p><%= @route.color %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
            <p>Setter:</p>
        </div>
        <div class="col-sm-3">
            <p><%= @route.setter.nick_name %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
            <p>Zone:</p>
        </div>
        <div class="col-sm-3">
            <p><%= @route.zone.name if @route.zone %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
            <p>Wall:</p>
        </div>
        <div class="col-sm-3">
            <p><%= @route.wall.name if @route.wall %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
            <p><%= @route.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
