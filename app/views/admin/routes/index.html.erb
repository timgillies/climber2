<%= form_for_filterrific @filterrific do |f| %>
  <div class="container-fluid">
    <div class="filter-body">
      <h1> Route Database </h1>
    </div>
    <br/>
    <div class="row">
      <div class="col-md-10">
        <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
        <%= f.text_field(
          :search_query,
          placeholder: 'Search by name or setter',
          class: 'filterrific-periodically-observed'
        ) %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.select(
          :with_grade_id,
          @filterrific.select_options[:with_grade_id],
          { include_blank: 'All grades' }
        ) %>
      </div>
      <div class="col-md-2">
        <%= f.select(
          :with_zone_id,
          @filterrific.select_options[:with_zone_id],
          { include_blank: 'All zones' }
        ) %>
      </div>
      <div class="col-md-2">
        <%= f.select(
          :with_wall_id,
          @filterrific.select_options[:with_wall_id],
          { include_blank: 'All walls' }
        ) %>
      </div>
      <div class="col-md-2">
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by]) %>
      </div>
      <div class="col-md-2">
        <%= link_to(
          'Reset filters',
          reset_filterrific_url,
        ) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= page_entries_info @routes  %>
    </div>
  </div>



<% end %>



<%= render(
partial: 'admin/routes/list',
locals: { routes: @routes }
) %>
