<div id="filterrific_results">

  <div class="row">
    <div class="col-md-3">
      <%= page_entries_info @routes  %>
    </div>
  </div>

  <table class="table table-hover table-condensed">
    <tr>
      <th>Route ID</th>
      <th>Zone</th>
      <th>Wall</th>
      <th>Grade</th>
      <th>Color</th>
      <th>Route Name</th>
      <th>Routesetter</th>
      <th>Set Date</th>
      <th>Exp. Date</th>
      <th>Active</th>
      <th></th>
      <th></th>

    </tr>
      <%= div_for(@routes) do |r| %>
        <td><button type="button" class="btn btn-default btn-sm"><%= link_to r.id,  admin_facility_route_path(@facility, r ) %></td></button>
        <td><%= r.zone.name if r.zone %></td>
        <td><%= r.wall.name if r.wall %></td>
        <td><%= r.grade.grade if r.grade %></td>
        <td><%= r.color %></td>
        <td><%= r.name %></td>
        <td><%= r.setter.nick_name if r.setter %></td>
        <td><%= r.setdate %></td>
        <td><%= r.enddate %></td>
        <td><%= r.active? %></td>
        <td><button type="button" class="btn btn-default btn-sm"><%= link_to "edit",  edit_admin_facility_route_path(@facility, r ) %></button></td>
        <td><button type="button" class="btn btn-danger btn-sm"><%= link_to "delete",  admin_facility_route_path(@facility, r ), method: :delete, data: {confirm: "Are you sure?"} %></button></td>
     </tr>
    <% end %>
  </table>
</div>

  <%= paginate @routes %>
