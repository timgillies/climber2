<div id="filterrific_results_admin">
  <div class="row">
    <div class="col-sm-10">
      <%= page_entries_info @routes  %>
    </div>
    <div class="col-sm-2">
      <%= link_to(
        'Reset filters',
        reset_filterrific_url
      ) %>
    </div>
  </div>

  <br />

  <%= div_for(@routes) do |f| %>
  <ol class="routelist">
    <li>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-10 col-sm-10 col-md-7 col-lg-7 col-xl-7">
            <h3>
              <%= link_to f.grade.grade + " "+ f.color.upcase , admin_facility_route_path(@facility, f) %>
            </h3>
            <h2> <%= f.name %></h2>
          </div>


          <div class="hidden-xs hidden-sm">
            <div class="col-md-2">
              <% if f.active? %>
                <%= button_to "expire",  expire_admin_facility_route_path(@facility, f ), class: 'btn btn-expire btn-xs', method: :expire, remote: true %>
              <% else %>
                <%= button_to "expire",  expire_admin_facility_route_path(@facility, f ), class: 'btn btn-expired btn-xs', method: :expire, remote: true %>
              <% end %>
            </div>

            <div class="col-md-2">
              <% if f.tagged? %>
              <%= button_to untagged_admin_facility_route_path(@facility, f ), class: 'btn btn-tagged btn-xs', remote: true, method: :untagged do %>
                    <i class="glyphicon glyphicon-ok"></i> tag
                    <%end %>
              <% else %>
              <%= button_to "tag",  tagged_admin_facility_route_path(@facility, f ), class: 'btn btn-tag btn-xs', method: :tagged, remote: true %>
              <% end %>
            </div>
          </div>
          <div class="col-xs-1">
              <h3><%= link_to edit_admin_facility_route_path(@facility, f ) do %>
                <i class="glyphicon glyphicon-cog"></i>
              <%end %>
            </h3>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
              <div class="tab">Route ID: <%= f.id %></div>

          </div>
          <div class="col-sm-12">
              <div class="tab"><%= f.zone.name if f.zone %> > <%= f.wall.name if f.wall %> > <%= f.sub_child_zone.name if f.sub_child_zone %></div>
          </div>
          <div class="col-xs-7 col-sm-8 col-md-10">
            <div class="tab"><%= f.user.name if f.setter%></div>
          </div>
          <div class="col-xs-5 col-sm-4 col-md-2">
            <div class="tab text-right">set <%= time_ago_in_words(f.created_at) %> ago</div>
          </div>
        </div>

        <div class="row">

          <div class="hidden-md hidden-lg hidden-xl">
            <br/>
            <div class="col-xs-6 col-sm-6">
              <% if f.active? %>
                <%= button_to "expire",  expire_admin_facility_route_path(@facility, f ), class: 'btn btn-expire btn-xs', method: :expire, remote: true %>
              <% else %>
                <%= button_to "expire",  expire_admin_facility_route_path(@facility, f ), class: 'btn btn-expired btn-xs', method: :expire, remote: true %>
              <% end %>
            </div>

            <div class="col-xs-6 col-sm-6">
              <% if f.tagged? %>
              <%= button_to untagged_admin_facility_route_path(@facility, f ), class: 'btn btn-tagged btn-xs', remote: true, method: :untagged do %>
                    <i class="glyphicon glyphicon-ok"></i> tag
                    <%end %>
              <% else %>
              <%= button_to "tag",  tagged_admin_facility_route_path(@facility, f ), class: 'btn btn-tag btn-xs', method: :tagged, remote: true %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </li>
  </ol>
  <% end %>

  <%= paginate @routes %>
</div>
