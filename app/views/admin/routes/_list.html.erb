<div id="filterrific_results">
  <div class="row">
    <div class="col-md-5">
      <%= page_entries_info @routes  %>
    </div>
  </div>

  <br />

  <%= div_for(@routes) do |f| %>
  <ol class="routelist">
    <li>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-9">
            <h3><%= link_to f.grade.grade , admin_facility_route_path(@facility, f) %>
              <small> <%= f.color.capitalize %><b> <%= f.name if f.name %></b></small>
            </h3>
          </div>

          <div class="col-sm-1">
            <%= button_to "edit",  edit_admin_facility_route_path(@facility, f ), :class => 'btn btn-addnew btn-xs', method: :get %>
          </div>
          <div class="col-sm-1">
            <% if f.tagged? %>
            <%= button_to "tag",  tagged_admin_facility_route_path(@facility, f ), :class => 'btn btn-tagged btn-xs', method: :tagged, remote: true %>
            <% else %>
            <%= button_to "tag",  tagged_admin_facility_route_path(@facility, f ), :class => 'btn btn-tag btn-xs', method: :tagged, remote: true %>
            <% end %>
          </div>

          <div class="col-sm-1">
              <% if f.active? %>
                <%= button_to "expire",  expire_admin_facility_route_path(@facility, f ), class: 'btn btn-expire btn-xs', method: :expire, remote: true %>
              <% else %>
                <%= button_to "expire",  expire_admin_facility_route_path(@facility, f ), class: 'btn btn-expired btn-xs', method: :expire, remote: true %>
              <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-3">
            <span class="timestamp">
              <h4><small>Route ID: <%= f.id %></small></h4>
            </span>
          </div>

          <div class="col-sm-3">
              <h4><small>Location: <%= f.zone.name %> / <%= f.wall.name %></small></h4>
          </div>
          <div class="col-sm-3">
            <h4><small><%= f.setter.nick_name %></small></h4>
          </div>
          <div class="col-sm-3">
            <h4><small>set <%= time_ago_in_words(f.setdate) %> ago</small></h4>
          </div>
        </div>
      </div>
    </li>
  </ol>
  <% end %>

  <%= paginate @routes %>
</div>
