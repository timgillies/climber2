<% provide(:title, 'New Route') %>

<div class="container-fluid">
  <div class="row">
    <div class="gray-labels routeform-header bg-blue-gradient">
      <h1><strong>New</strong>route</h1>
    </div>
    <div class="col-sm-12">
        <div class="row">
          <div id="successMessage" style="display: none"></div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="row">
        <%= render 'admin/routes/form', object: @routes  %>
        </div>
    </div>
    <div class="col-sm-6 hidden-xs">
        <div class="row">
        <%= render 'admin/routes/recent', object: @recent_routes  %>
        </div>
    </div>
  </div>
</div>
