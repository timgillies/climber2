<%= form_for [:admin, @grade_system, @grade] do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="col-sm-3 col-md-3 col-lg-3">
  <%= f.label :grade, "Grade Name" %>
  <%= f.text_field :grade, class: 'form-control', placeholder: "Enter new grade name..." %>
</div>

<div class="col-sm-3 col-md-3 col-lg-3">
  <%= f.label :range_start, "Range Start" %>
  <%= f.select :range_start, (0...42), {include_blank: "Range start"}, {class: 'form-control'} %>
</div>

<div class="col-sm-3 col-md-3 col-lg-3">
  <%= f.label :range_end, "Range End" %>
  <%= f.select :range_end, (0...42), {include_blank: "Range end"}, {class: 'form-control'}  %>
</div>

<div class="col-sm-3 col-md-3 col-lg-3">
  <label class="hidden-xs">&nbsp;</label>
  <%= f.submit "Save", class: "btn btn-submit" %>
</div>



<% end %>
