
  <%= div_for @zones do |fz| %>
  <ol class="routelist">
    <li>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-5 col-xs-6">
            <p><%= fz.name %></p>
          </div>
          <div class="col-sm-5 col-xs-2">
              <p><%= fz.routes.current.count %><span class="hidden-xs"> active routes</span></p>
          </div>
          <div class="col-xs-2 col-sm-1 col-md-1">
            <p><%= link_to edit_admin_facility_zone_path(@facility, fz ) do %>
                        <i class="glyphicon glyphicon-cog"></i>
            </p>            <% end %>
          </div>

          <div class="col-xs-2 col-sm-1 col-md-1">
            <p><%= link_to admin_facility_zone_path(@facility, fz), data: {:confirm => 'Are you sure? This cannot be undone.'},
                        :method => :delete do %>
                        <i class="glyphicon glyphicon-trash"></i>
            </p>            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-xs-12">
            <% if fz.walls.count > 0 %>
            <%= render 'facilities/walldist', :fz => fz %>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  </ol>
  <% end %>
