<% @zone.walls.each do |w| %>
  <ol class="routelist">
    <li>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-5 col-xs-6">
            <p><div class="tab"><%= w.name %></div></p>
          </div>
          <div class="col-sm-5 col-xs-2">
            <p><%= w.routes.current.count %></p>
          </div>
          <div class="col-xs-2 col-sm-1 col-md-1">
            <p><%= link_to edit_admin_facility_wall_path(@facility, w ) do %>
                        <i class="glyphicon glyphicon-cog"></i>
                        <% end %>
            </p>
          </div>

          <div class="col-xs-2 col-sm-1 col-md-1">
            <p><%= link_to admin_facility_wall_path(@facility, w), data: {:confirm => 'Are you sure? This cannot be undone.'},
                        :method => :delete do %>
                        <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
            </p>
          </div>
        </div>
        <div class="row">
          <% w.sub_child_zones.each do |s| %>
            <div class="col-sm-5 col-xs-6">
              <p><i><div class="doubletab">> <%= s.name %></div></i></p>
            </div>
            <div class="col-sm-5 col-xs-2">
              <p><%= s.routes.current.count %></p>
            </div>
            <div class="col-xs-2 col-sm-1 col-md-1">
              <p><%= link_to edit_admin_facility_sub_child_zone_path(@facility, s ) do %>
                          <i class="glyphicon glyphicon-cog"></i>
                         <% end %>
              </p>
            </div>

            <div class="col-xs-2 col-sm-1 col-md-1">
              <p><%= link_to admin_facility_sub_child_zone_path(@facility, s), data: {:confirm => 'Are you sure? This cannot be undone.'},
                          :method => :delete do %>
                          <i class="glyphicon glyphicon-trash"></i>
                         <% end %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </li>
  </ol>
  <% end %>
