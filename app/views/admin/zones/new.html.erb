<% provide(:title, 'Add Zones') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="routes">
        <h1><small>Edit zone</small></h1>
      </div>
      <%= form_for [:admin, @facility, @zone], :html => {:class => "form-label"}, remote: false do |f| %>
      <%= render 'admin/zones/form', object: @zones, f: f%>
      <div class="col-sm-3 col-md-3 col-lg-3">
        <label class="hidden-xl">&nbsp;</label>
        <%= f.submit "Save", class: "btn btn-submit" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
