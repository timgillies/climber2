<% provide(:title, 'Zones') %>

<div class="container-fluid">
  <div class="row">
    <div class="routelist-header bg-blue-gradient">
      <h1>ZONES</h1>
      <span class="btn-group pull-right no-print">
        <button type="button" class="btn btn-close dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="glyphicon glyphicon-cog"></span> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><%= link_to "New primary", "#newZoneModal", data: { toggle: "modal"} %></li>
          <li><%= link_to "New sub-zone", "#newWallModal", data: { toggle: "modal"} %></li>
        </ul>
      </span>
  </div>
  </div>
  <br>
  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        <div class="col-sm-12">
        <%= render 'facilities/zonedist', object: @zones %>
        </div>
      </div>
    </div>
    <div class="col-sm-12">
      <div class="row">
        <%= div_for @zones do |fz| %>
          <%= render 'admin/zones/zone', object: @zones, :fz => fz %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="row">
        <div class="col-sm-12">
        <%= render 'facilities/zonedist', object: @zones %>
        </div>
      </div>
    </div>

  </div>
</div>

<!-- Zone Modal -->

  <div class="modal fade" id="newZoneModal" tabindex="-1" role="dialog" aria-labelledby="newZoneModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <span class="modal-title" id="newZoneModal"><%= link_to (image_tag 'cc-white-horizontal.svg'), root_path, class: "logo" %></span>
        </div>
        <div class="modal-body row">
          <%= form_for [:admin, @facility, @zone], :html => {:class => "form-label"}, remote: false do |f| %>
              <%= render 'admin/zones/form', :f => f %>
        </div>
        <div class="modal-footer">
          <%= f.button :submit, class: "btn btn-save" %>
          <button type="button" class="btn btn-close" data-dismiss="modal">cancel</button>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <!-- Wall Modal -->

    <div class="modal fade" id="newWallModal" tabindex="-1" role="dialog" aria-labelledby="newWallModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <span class="modal-title" id="newWallModal"><%= link_to (image_tag 'cc-white-horizontal.svg'), root_path, class: "logo" %></span>
          </div>
          <div class="modal-body row">
            <%= form_for [:admin, @facility, @wall], :html => {:class => "form-label"}, remote: false do |f| %>
                <%= render 'admin/walls/form', :f => f %>
          </div>
          <div class="modal-footer">
            <%= f.button :submit, class: "btn btn-save" %>
            <button type="button" class="btn btn-close" data-dismiss="modal">cancel</button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
