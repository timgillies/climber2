<% provide(:title, 'Zones') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="routelist-header">
        <h1>Zone</h1>
      </div>
      <div class="container-fluid bg-gray">
        <%= form_for [:admin, @facility, @zone], :html => {:class => "form-label"}, remote: false do |f| %>
        <%= render 'admin/zones/form', object: @zones, f: f%>
        <div class="col-sm-3 col-md-3 col-lg-3">
          <label class="hidden-xl">&nbsp;</label>
          <%= f.submit "Save", class: "btn btn-submit" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="headliner">
        <h1>Zone Children</h1>
      </div>
    <%= render 'admin/zones/zone_children', object: @zone %>
    </div>
  </div>
</div>
