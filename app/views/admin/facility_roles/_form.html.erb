<div class="container-fluid">
  <div class="row">
    <% if params[:action] == "edit" %>
    <div class="col-sm-12 col-md-6 col-lg-6">
      <br/>
      <label class="hidden-xl">&nbsp;</label>
      <%= @facility_role.email %>
    </div>

    <% else %>

    <div class="col-sm-12">
      <i>Please be sure to use the e-mail the user will sign up with.</i>
      <br/>
      <br/>
      <%= f.label :email, "Recipient's Email Address:" %>
      <%= f.text_field :email, class: 'form-control', placeholder: "Enter email address" %>
    </div>

    <% end %>

    <div class="col-sm-12">
      <%= f.label :name, "Assign role:" %>
      <%= f.select(:name, @role_names ,{include_blank: "Select role..." },{class: "form-control"}) %>
    </div>
  </div>
</div>


<br/>
