<%= div_for(@facility_roles) do |f| %>
<ol class="routelist">
  <li>
    <div class="container-fluid">
      <div class="row">
        <% if f.confirmed? %>
        <div class="col-sm-4">
          <p>
            <%= f.user.name %>
          </p>
        </div>
        <% else %>
        <div class="col-sm-4">
          <p>
            <%= f.email if f.email%>
          </p>
        </div>
        <% end %>
        <div class="col-sm-4">
          <p><%= f.name.humanize if f.name %></p>
        </div>


        <div class="col-sm-2">
          <% if f.confirmed? %>
          <p><i class="glyphicon glyphicon-ok glyphicon-green"></i>  Confirmed</p>
          <% else %>
          <p>Invited</p>
          <% end %>
        </div>

        <div class="col-xs-1 col-sm-1 col-md-1">
          <p><%= link_to edit_admin_facility_facility_role_path(@facility, f ) do %>
                      <i class="glyphicon glyphicon-cog"></i>
                      <%end %>
          </p>
        </div>

        <div class="col-xs-1 col-sm-1 col-md-1">
          <p><%= link_to admin_facility_facility_role_path(@facility, f), data: {:confirm => 'Are you sure? This cannot be undone.'},
                      :method => :delete do %>
                      <i class="glyphicon glyphicon-trash"></i>
                      <%end %>
          </p>
        </div>
      </div>
      <row>
      </div>
          <%= render 'facilities/rolegradedist', :f => f %>
      </div>
      </row>
    </div>
  </li>
</ol>
<% end %>
