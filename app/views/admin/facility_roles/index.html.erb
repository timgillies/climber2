<% provide(:title, 'Facility Team') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="headliner">
        <h1 class="pull-left">Team</h1>
        <span class="pull-right no-print">
            <%= link_to "Add team member", new_admin_facility_facility_role_path, remote: true, class: "btn btn-create", style: "display: inline-block" %>
        </span>
      </div>
    </div>
  </div>
  <div class="row" id="new_facility_role">
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'admin/facility_roles/facility_role', object: @facility_roles %>
    </div>
  </div>
</div>
